<p id="notice"><%= notice %></p>



<div class="card" style="width: 18rem;">
<%= image_tag(@idea.picture_url, class:"card-img-top") if @idea.picture.present? %>
  <div class="card-body">
    <h5 class="card-title"><%= @idea.name %></h5>
    <p class="card-text"><%= @idea.description %></p>
    <%= link_to 'Edit', edit_idea_path(@idea), class:"btn btn-primary" %>
  

  </div>
</div>
<br>
<h5>Comments</h5>
<% @idea.comments.each do |comment|  %>
<p> <%= comment.name %></p>
<p> <%= comment.content %></p>
<% end %>

  <br>
  <br>
  <h5>Add comment</h5>
  <%= form_with(model: [ @idea, @idea.comments.build ], local: true) do |form| %>
    <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    </p>
    <p>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
    </p>
    <p>
    <%= form.submit %>
    </p>
  <% end %>